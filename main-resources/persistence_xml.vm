<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.2">

	<!-- Generated by Telosys ( $now.date $now.time ) -->

	<!-- Persistence unit for PostgreSQL Database -->
	<persistence-unit name="pu-postgre" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		
		<properties>
			<!-- JPA configuration -->
            <property name="jakarta.persistence.jdbc.driver"   value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url"      value="jdbc:postgresql://localhost:5432/postgres"/>
            <property name="jakarta.persistence.jdbc.user"     value="admin"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
			<!-- Hibernate configuration -->
			<property name="hibernate.dialect"            value="org.hibernate.dialect.PostgreSQLDialect"/>
			<property name="hibernate.hbm2ddl.auto"       value="none"/>
			<property name="hibernate.show_sql"           value="none"/>
		</properties>

		<!-- 
		   List of all named managed persistence classes (all entities)
		   This list must be specified to insure portability. It is required for SQL/DDL generation.
		-->
#foreach( $entity in $selectedEntities )
		<class>${ROOT_PKG}.entities.${entity.name}</class>
#end

	</persistence-unit>
    
</persistence>